<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <h3><b><%= listing.title %></b></h3>
    </div>

    <div class="card col-6 offset-2 show-card listing-card">
      <img 
        src="<%= listing.image.url %>" 
        class="card-img-top show-image" 
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %> <br/>
          &#8377 <%= listing.price.toLocaleString("en-IN") %> /night <br/>
          <%= listing.location %> <br/>
          <%= listing.country %> <br/>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 offset-2">
        <form method="GET" action="/listings/<%= listing._id%>/edit" style="display: inline; margin-right: 1rem;">
          <button class="btn btn-primary mt-2">Edit Details</button>
        </form>
        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE" style="display: inline;">
          <button class="btn btn-danger mt-2">Delete listing</button>
        </form>
      </div>
    </div>

    <div class="col-8 offset-2 mb-3">
      <hr>
      <h4>Leave a Review</h4>
      <form 
        method="POST" 
        action="/listings/<%= listing.id %>/reviews"
        novalidate
        class="needs-validation"
        style="display: inline; margin-right: 1rem;"
      >
        <div class="mb-3 mt-3">
          <label for="Rating" class="form-label">Rating</label>
          <input 
            type="range" 
            min="1" 
            max="5" 
            id="rating" 
            name="review[rating]" 
            class="form-range">
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea 
            name="review[comment]" 
            id="comment" 
            cols="30" 
            class="form-control mb-2" 
            placeholder="write your review here..."
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some review
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>

      <hr/>

      <p><b>All Reviews</b></p>
      <div class="row">
        <% for(review of listing.reviews){ %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body mt-2">
            <h5 class="card-title">Jhuri</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %>‚≠ê</p>
            <form 
              method="POST" 
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" 
              class="mb-3"
            >
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>

    </div>
  </div>
</body>
